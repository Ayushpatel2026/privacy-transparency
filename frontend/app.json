{
  "expo": {
    "name": "sleep-tracker",
    "slug": "sleep-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sleeptracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.mcscert.sleeptracker",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Your microphone will listen for sounds like snoring or sleep talking only while you are sleeping to help detect sleep disruptions.",
        "NSMotionUsageDescription": "This app collects accelerometer data to detect movement during sleep.",
        "NSLightUsageDescription": "This app collects light sensor data to monitor ambient light conditions during sleep.",
        "UIBackgroundModes": ["audio", "fetch"]
      }
    },
    "android": {
      "package": "com.mcscert.sleeptracker",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "white"
      },
      "permissions": [
        "FOREGROUND_SERVICE",
        "RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "white"
        }
      ],
      "expo-secure-store",
      [
        "expo-sqlite",
        {
          "useSQLCipher": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
